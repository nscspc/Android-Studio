<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item><!--we can add only these 2 colors name in the theme(may be this is due to the parent)-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Now Creating style for TextView -->
    <style name="MyTextViewStyle" parent="android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#006633</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#f07777</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>